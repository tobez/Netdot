<%args>
$o                => undef;
$MAX_SELECTION    => undef;
$start_id         => undef;
$end_id           => undef;
$page_type        => undef;
$submit_site      => undef;
$backbone_srch    => undef;
$backbone_id_srch => undef;
$edit             => undef;
$site_srch        => undef;
$cable_sort       => undef;
$user             => $ui->get_current_user($r)
</%args>

<%init>
my $DEBUG = 0;
my (@field_headers, @cell_data, @headers, @rows);
my $manager = $ui->get_permission_manager($r);
</%init>

<%perl>

	my @cables = ();
	my $header_descr = "";

	# if we are searching by backbone name...
	if ($backbone_srch && !defined($submit_site)) {
	    @cables = BackboneCable->search_like(name=>$backbone_srch);
	}

	# searching by site name
	elsif ($site_srch && !defined($submit_site)) {
	    my @sites = Site->search_like(name=>$site_srch);
	    my @closets = ();
	    map { push (@closets, $_->closets) } @sites;
	    foreach my $closet (@closets) {
		my $c_id = $closet->id;
		map { push (@cables, $_) } (BackboneCable->search(start_location=>$c_id),
					    BackboneCable->search(end_location=>$c_id));
	    }
	}

	# user selected a start and end point
	elsif ($start_id && $end_id) {
	    my $s1 = Location->retrieve($start_id);
	    my $s2 = Location->retrieve($end_id);
	    @cables = BackboneCable->search_by_location(loc1=>$start_id, loc2=>$end_id);

	    $header_descr = sprintf("between <a href=\"view.html?table=Location&id=%d\">%s</a>".
				    " and <a href=\"view.html?table=Location&id=%d\">%s</a>",
	 			    $s1->id, $s1->get_label, $s2->id, $s2->get_label);
        }

	elsif ($start_id) {
	    my $start_site = Location->retrieve($start_id);
	    @cables = BackboneCable->search_by_location(loc1=>$start_id);

	    $header_descr = sprintf("connected to <a href=\"view.html?table=Location&id=%d\">%s</a>",
				    $start_site->id, $start_site->name);
	}
	</%perl>

        <div class="container">
%         if (scalar(@cables) > $MAX_SELECTION) {

            <div class="containerhead">
	      Backbone Cable
	    </div>
	    <div class="containerbody">
	      <b>Over <% $MAX_SELECTION %> rows were returned. Please refine your criteria.</b>
	    </div>

%         } else {

            <div class="containerheadleft">
	      Backbone Cable(s) <% $header_descr ? $header_descr : "" %>
	    </div>
	    <div class="containerheadright">
%             if ($edit eq "cableinfo"){
                <input type="button" name="cancel_button" value="cancel" onClick="history.go(-1);"> &nbsp;&nbsp; <input name="submit" value="save" type="submit">
%             } else {
%                   if ( $manager && $manager->can($user, 'access_admin_section', 'cable_plant_backbone:new') ){
                        <a href="cable_backbone.html?id=NEW">[new]</a> &nbsp;
%                   }
%                   if ( $manager && $manager->can($user, 'edit', $o) ){
		        <a href="cable_plant.html?start_id=<% $start_id %>&end_id=<% $end_id %>&backbone_srch=<% $backbone_srch |u %>&page_type=<% $page_type %>&edit=cableinfo">[edit]</a>
%                   }
%             }
            </div>

	    <div class="containerbody">
	      <% scalar(@cables) %> row(s) returned.

%	      if (scalar(@cables) && scalar(@cables) <= $MAX_SELECTION) {

                <%perl>
		$cable_sort = "name" if (!defined($cable_sort) || $cable_sort eq "");
		my @sorted_cables;
		if ($cable_sort eq "name") {
		    @sorted_cables = sort { $a->$cable_sort cmp $b->$cable_sort } @cables;
		} elsif ($cable_sort eq "type") {
		    @sorted_cables = sort { $a->type->name cmp $b->type->name } @cables;
		} elsif ($cable_sort eq "start_location") {
		    @sorted_cables = sort { $a->start_location->name cmp $b->start_location->name } @cables;
		} elsif ($cable_sort eq "end_location") {
		    @sorted_cables = sort { $a->end_location->name cmp $b->end_location->name } @cables;
		} elsif ($cable_sort eq "owner") {
		    @sorted_cables = sort { $a->owner->name cmp $b->owner->name } @cables;
		} elsif ($cable_sort eq "strand_count") {
		    @sorted_cables = sort { scalar($a->strands) <=> scalar($b->strands) } @cables;
		} else {
		    $m->comp("error.mhtml", "Unknown value for cable_sort: \"$cable_sort\"");
		}
		</%perl>

		<%perl>
		(@headers, @rows) = ();

		use URI::Escape;
		push( @headers, '<a href="cable_plant.html?start_id=' . $start_id . '&end_id=' . $end_id
		      . '&backbone_srch=' . uri_escape($backbone_srch) . '&cable_sort=name&page_type=' . $page_type . '">Name</a>' );
		push( @headers, '<a href="cable_plant.html?start_id=' . $start_id . '&end_id=' . $end_id
		      . '&backbone_srch=' . uri_escape($backbone_srch) . '&cable_sort=type&page_type=' . $page_type . '">Type</a>' );
		push( @headers, '<a href="cable_plant.html?start_id=' . $start_id . '&end_id=' . $end_id
		      . '&backbone_srch=' . uri_escape($backbone_srch) . '&cable_sort=start_location&page_type=' . $page_type . '">Start Location</a>' );
		push( @headers, '<a href="cable_plant.html?start_id=' . $start_id . '&end_id=' . $end_id
		      . '&backbone_srch=' . uri_escape($backbone_srch) . '&cable_sort=end_location&page_type=' . $page_type . '">End Location</a>' );
		push( @headers, '<a href="cable_plant.html?start_id=' . $start_id . '&end_id=' . $end_id
		      . '&backbone_srch=' . uri_escape($backbone_srch) . '&cable_sort=strand_count&page_type=' . $page_type . '"># of Strands</a>');
		push( @headers, '<a href="cable_plant.html?start_id=' . $start_id . '&end_id=' . $end_id
		      . '&backbone_srch=' . uri_escape($backbone_srch) . '&cable_sort=owner&page_type=' . $page_type . '">Owner</a>' );

		foreach my $cable (@sorted_cables) {

		    my $start_site = $cable->start_location;  # XXX walk up to a "site"?
		    my $end_site   = $cable->end_location;    # XXX ^^^ ?
		    my $start_site_id = $start_site->id if ($start_site);
		    my $end_site_id = $end_site->id if ($end_site);

		    my @row = ();
		    push( @row,
			  &{sub{
			      my $ac = "";
			      if ($edit eq "cableinfo") {
				  $ac .= '<input type="checkbox" name="' . "BackboneCable__" . $cable->id . "__delete" . '">[del]';
				  $ac .= '<input type="text" name="BackboneCable__' . $cable->id . '__name" value="' . $cable->name . '">';
			      } else {
				  $ac .= '<a href="cable_backbone.html?id=' . $cable->id . '">' . $cable->name . '</a>';
			      }
			      $ac;
			  }} );
		    push( @row, $ui->form_field(object=>$cable, column=>"type", edit=>($edit eq "cableinfo"), returnValOnly=>1) );
		    push( @row,
			  &{sub{
			      my $ac = "";
			      if ($edit eq "cableinfo") {
				  $ac .= $ui->form_field(object=>$cable, column=>"start_location", edit=>($edit eq "cableinfo"), returnValOnly=>1);
			      } else {
				  my $linkPage = $ui->table_view_page("Location") || 'view.html';
				  my %field = $ui->form_field(object=>$cable, column=>"start_location", edit=> 0, new_button => 0, linkPage=>$linkPage);
				  $ac .= $field{value};
			      }
			      $ac;
			  }} );
		    push( @row,
			  &{sub{
			      my $ac = "";
			      if ($edit eq "cableinfo") {
				  $ac .= $ui->form_field(object=>$cable, column=>"end_location", edit=>($edit eq "cableinfo"), returnValOnly=>1);
			      } else {
				  my $linkPage = $ui->table_view_page("Location") || 'view.html';
				  my %field = $ui->form_field(object=>$cable, column=>"end_location", edit=> 0, new_button => 0, linkPage=>$linkPage);
				  $ac .= $field{value};
			      }
			      $ac;
			  }} );
		    push( @row, scalar($cable->strands)  );
		    push( @row, $ui->form_field(object=>$cable, column=>"owner", edit=>($edit eq "cableinfo"), returnValOnly=>1) );
		    push( @rows, \@row );
		}
		</%perl>

		<& /generic/data_table.mhtml, field_headers=>\@headers, data=>\@rows &>
%             }

            </div> <!-- close containerbody -->
          </div> <!-- close container -->

%       }

</%perl>
